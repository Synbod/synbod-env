{
  "compilerOptions": {
    "module": "esnext",
    "target": "es6",
    "moduleResolution": "node",
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./dist",
    "sourceMap": true
  },
  "include": ["components/**/*"],
  "exclude": ["node_modules"],
  "plugins": [
    {
      "name": "typescript-tslint-plugin"
    }
  ]
}
